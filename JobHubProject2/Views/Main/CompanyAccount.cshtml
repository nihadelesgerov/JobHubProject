@model IList<Job>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/download.png">

    <title>Company Profile</title>
</head>
<body>
    <header class="header">
        <div class="logo">
            <h1>JobHub</h1>
        </div>
        <nav class="nav-links">
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button class="logout-btn">Logout</button>
            </form>
        </nav>
    </header>

    <main class="content">
        <section class="company-info">
            <div class="company-details">
                <h2>@ViewBag.CompanyName @ViewBag.CompanyType</h2>
                <p>
                    @ViewBag.CompanyName @ViewBag.CompanyType @ViewBag.CompanyFoundedYear-ci ildən
                    etibarən @ViewBag.CompanyHeadOffice-da fəaliyyət göstərir. @ViewBag.CompanyOverview
                    və missiyası: @ViewBag.CompanyMission.
                </p>
                <p><strong>Contact: @ViewBag.Email</strong> | @ViewBag.CompanyPhone</p>

                <div class="company-actions">
                    <form method="get" asp-action="EditCompanyInfo">
                        <button class="edit-btn">Edit Account</button>
                    </form>
                    <form method="get" asp-action="JobPost">
                        <button class="post-btn">Post Job</button>
                    </form>
                </div>
            </div>
        </section>

        <section class="job-postings">
            @if (Model.Count == 0)
            {
                <h3>No active vacancies</h3>
                <h4>If you encounter an issue, please <a asp-action="Contact">contact us</a>.</h4>
            }
            else
            {
                <h3>Active Job Postings</h3>
                @foreach (var list in Model)
                {
                    <a style="text-decoration:none" asp-action="Jobs" asp-route-id="@list.Id" target="_blank">
                    <div class="job-card">
                        <h4><a>@list.Title, @list.ApplicationDeadline</a></h4>
                        <p>@list.Location</p>
                    </div>
                    </a>
                }
            }
        </section>
    </main>

    <footer class="footer">
        <p>&copy; 2024 JobHub. All rights reserved.</p>
    </footer>

    <style>
        /* Reset Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #1f1f1f;
            color: white;
        }

        a {
            color: #bb86fc;
        }

            a:hover {
                text-decoration: underline;
            }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #1f1f1f;
        }

        .logout-btn {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .logout-btn:hover {
                background-color: darkred;
            }

        /* Content */
        .content {
            width: 80%;
            margin: 30px auto;
        }

        /* Company Info */
        .company-info {
            background-color: #333;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
        }

        .company-details h2 {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .company-actions button {
            margin-right: 10px;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .edit-btn {
            background-color: #4caf50;
            color: white;
        }

            .edit-btn:hover {
                background-color: #388e3c;
            }

        .post-btn {
            background-color: #1565c0;
            color: white;
        }

            .post-btn:hover {
                background-color: #0d47a1;
            }

        /* Job Postings */
        .job-card {
            background-color: #444;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

            .job-card:hover {
                transform: scale(1.05);
            }

        /* Footer */
        .footer {
            background-color: #1f1f1f;
            text-align: center;
            padding: 10px;
        }
    </style>
</body>
</html>
