@{
    Layout = null;
}
@Html.AntiForgeryToken()
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Not Found</title>
    <link rel="icon" type="image/x-icon" href="~/download.png">

</head>
<body>
    <div class="error-container">
        <h1>404 - Page Not Found</h1>
        <p>Sorry, the page you are looking for does not exist. You can:</p>
        <ul>
            <li>Return to the <a asp-action="HomePage" asp-controller="Main">homepage</a>.</li>
            <li>Use the search bar to find what you need.</li>
            <li>If you believe this is a mistake, please contact support.</li>
        </ul>
        <img src="~/istockphoto-1404059706-612x612.jpg" alt="Not Found" class="error-image">
    </div>
    <footer class="footer">
        <p>&copy; 2024 KaryeSphera. All rights reserved.</p>
    </footer>
    <style>
              /* Reset Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: white;
            color: #333;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            text-align: center;
        }

        h1 {
            font-size: 2.5em;
            color: #d32f2f; /* Error color */
        }

        p {
            margin: 10px 0;
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 20px 0;
        }

        a {
            color: #1976d2;
            text-decoration: underline;
        }

        a:hover {
            color: #bbdefb;
        }

        /* Error Image */
        .error-image {
            width: 300px;
            height: auto;
            margin-top: 20px;
        }

        /* Footer */
        .footer {
            background-color: #283593;
            color: white;
            text-align: center;
            padding: 10px;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

    </style>
</body>
</html>