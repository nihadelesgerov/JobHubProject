@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/download.png">

    <title>Admin Dashboard</title>
</head>
<body>
    <header class="header">
        <div class="logo">
            <h1>JobHub Admin</h1>
        </div>
        <nav class="nav-links">
            <a asp-action="ManageUsers">Manage Users</a>
            <a asp-action="ManageJobPostings">Manage Job Postings</a>
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button class="btn btn-primary">Logout</button>
            </form>
        </nav>
    </header>

    <main class="content">
        <section class="dashboard-container">
            <h2>Admin Overview</h2>
            <div class="stats">
                <div class="stat-card">
                    <h3>Total Users</h3>
                    <p>@ViewBag.TotalUsers</p>
                </div>
                <div class="stat-card">
                    <h3>Total Job Postings</h3>
                    <p>@ViewBag.TotalJobs</p>
                </div>
                <div class="stat-card">
                    <h3>Active Job Seekers</h3>
                    <p>@ViewBag.TotalEmployees</p>
                </div>
                <div class="stat-card">
                    <h3>Active Companies</h3>
                    <p>@ViewBag.TotalCompanies</p>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <p>&copy; 2024 KaryeSphera. All rights reserved.</p>
    </footer>
    <Style>
              /* Reset Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        a {
            text-decoration: none;
            color: #1976d2;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #283593;
            color: white;
        }

        .nav-links a {
            margin-left: 20px;
            font-weight: bold;
            color: white;
            transition: color 0.3s;
        }

        .nav-links a:hover {
            color: #bbdefb;
        }

        /* Main Content */
        .content {
            flex: 1;
            width: 80%;
            margin: 30px auto;
        }

        .dashboard-container, .user-management-container, .job-postings-management-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        /* Stats Section */
        .stats {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .stat-card {
            background-color: #e3f2fd;
            border-radius: 10px;
            padding: 20px;
            margin: 10px;
            text-align: center;
            flex: 1 1 200px;
        }

        .stat-card h3 {
            margin-bottom: 10px;
        }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
        }

        .edit-btn, .delete-btn {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .edit-btn {
            background-color: #4caf50;
            color: white;
        }

        .edit-btn:hover {
            background-color: #388e3c;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
            margin-left: 5px;
        }

        .delete-btn:hover {
            background-color: #c62828;
        }

        /* Footer */
        .footer {
            background-color: #283593;
            color: white;
            text-align: center;
            padding: 10px;
        }

    </Style>
</body>
</html>